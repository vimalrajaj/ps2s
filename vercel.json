{
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "public",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/login",
      "destination": "/login.html"
    },
    {
      "source": "/student-page",
      "destination": "/student_page/index.html"
    },
    {
      "source": "/faculty-page",
      "destination": "/faculty_page/index.html"
    },
    {
      "source": "/university-portal",
      "destination": "/university_portal/index.html"
    }
  ]
}